    $(document).ready(function(){
      // Asigna un controlador de eventos al hacer clic en una carpeta
      $('.carpeta').on('click', function() {
        var idCarpeta = $(this).data('id'); // Obtiene el ID de la carpeta

        // Realiza una solicitud AJAX para obtener los reportes de la carpeta
        $.ajax({
          url: '/usuarios/carpetas/detalle_user', // Ruta en el servidor para obtener los reportes
          method: 'GET',
          data: { idCarpeta: idCarpeta }, // Envia el ID de la carpeta al servidor
          success: function(data) {
            // Actualiza el contenido de los reportes en la página
            $('#reportes').html(data);
          }
        });
      });
    });
  </script>

